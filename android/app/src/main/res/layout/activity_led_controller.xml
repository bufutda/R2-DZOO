<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".R2Controller">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R2-DZOO Controller"
        android:id="@+id/textViewTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#00b1fc" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OFF"
        android:id="@+id/buttonOff"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textViewTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#00b1fc"
        android:textColor="#fff"
        android:textSize="30dp"
        android:typeface="monospace" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ON"
        android:id="@+id/buttonOn"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/buttonOff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/buttonOff"
        android:layout_alignEnd="@+id/buttonOff"
        android:typeface="monospace"
        android:textSize="30dp"
        android:textColor="#fff"
        android:backgroundTint="#00b1fc" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLINK"
        android:id="@+id/buttonBlink"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/buttonOn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/buttonOff"
        android:layout_alignEnd="@+id/buttonOff"
        android:backgroundTint="#00b1fc"
        android:textSize="30dp"
        android:textColor="#fff"
        android:typeface="monospace" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disconnect"
        android:id="@+id/buttonDisconnect"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:typeface="monospace"
        android:textColor="#fff"
        android:backgroundTint="#00b1fc" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/buttonReset"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:typeface="monospace"
        android:textColor="#fff"
        android:backgroundTint="#00b1fc" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchCircuit1"
        android:layout_below="@id/buttonBlink"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="42dp"
        android:trackTint="#00b1fc"
        android:thumbTint="#00b1fc"
        android:checked="false"
        android:layout_marginTop="20dp"
        android:switchMinWidth="60dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchCircuit2"
        android:layout_below="@id/buttonBlink"
        android:layout_marginBottom="42dp"
        android:layout_marginLeft="90dp"
        android:thumbTint="#00b1fc"
        android:trackTint="#00b1fc"
        android:layout_marginTop="20dp"
        android:switchMinWidth="60dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchCircuit3"
        android:layout_below="@id/buttonBlink"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="42dp"
        android:layout_marginRight="90dp"
        android:trackTint="#00b1fc"
        android:thumbTint="#00b1fc"
        android:layout_marginTop="20dp"
        android:switchMinWidth="60dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchCircuit4"
        android:layout_below="@id/buttonBlink"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="42dp"
        android:trackTint="#00b1fc"
        android:thumbTint="#00b1fc"
        android:layout_marginTop="20dp"
        android:switchMinWidth="60dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switchCircuit1"
        android:id="@+id/buttonDriveLeft"
        android:layout_alignParentLeft="true"
        android:src="@drawable/zoo"
        android:background="@null"
        android:layout_marginTop="20dp"
        android:alpha="1" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switchCircuit1"
        android:id="@+id/buttonDriveRight"
        android:layout_alignParentRight="true"
        android:src="@drawable/zoo"
        android:background="@null"
        android:layout_marginTop="20dp"
        android:alpha="1" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switchCircuit1"
        android:layout_centerHorizontal="true"
        android:id="@+id/driveSwitch"
        android:rotation="-90"
        android:layout_marginTop="50dp"
        android:checked="false"
        android:switchMinWidth="100dp"
        android:splitTrack="true"
        android:trackTint="#00b1fc"
        android:thumbTint="#00b1fc" />
</RelativeLayout>
